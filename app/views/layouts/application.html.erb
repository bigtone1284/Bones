<!DOCTYPE html>
<html>
<head>
  <title>Bones</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <link rel="stylesheet" type="text/css" href="http://www.ambor.com/hb/dice.ttf">

  <%= csrf_meta_tags %>
</head>
<body>

<h1><%= link_to 'Bones.', root_path%></h1>

<div class="login">
  <% if session[:current_user_id] %>
    Welcome, <%= link_to current_user.username, current_user, id: 'userLink' %> |
    <%= link_to "Log Out", sessions_path, method: :delete %>
  <% else %>
    <h1>Log In</h1>

    <%= form_tag sessions_path do %>
      <%= label_tag :username %><br>
      <%= text_field_tag :username %><br>

      <%= label_tag :password %><br>
      <%= password_field_tag :password %><br>

      <%= submit_tag 'Log In' %>
    <% end %>
    <%= link_to "Sign Up", new_user_path %>|
  <% end %>
</div>
<div class='errorMessages'>
  <%= flash[:login_error] %>
  <%= flash[:logout] %>
</div>

<div id='content'>
<%= yield %>
</div>
<footer><hr><%= link_to "Bones", root_path %><%= " " + Time.zone.now.year.to_s%></footer>
</body>
</html>
