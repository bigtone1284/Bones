.domino {
	text-align: center;
	overflow: auto;
	font-family: helvetica;
	font-size: 4em;
	color: rgba(0,0,0,0);

}

#gameboard.active {
	background-color: orchid;
	height: 400px;
	width: 650px;
	float: right;
	text-align: center;
	display: table-cell;
	vertical-align: middle;
}

#hands {
	float: left;
}

.player {
	float: left;
	display: inline-block;
	margin: 0.1em;
}

.player.current { 
	background-color: springgreen;
}

.train {
	padding-top: 4em;
}

.northSuite {
	float: left;
	text-align: center;
}

.southSuite {
	float: left;
	text-align: center;
}

.firstplay {
  margin: 0 auto;
	background-color: springgreen;
	text-align: center;
	font-size: 3em;
	display: inline-block;
}

.train .domino {
	display: inline-block;
	background-color: snow;
	font-size: 2.5em;
	display: inline-block;
	font-family: 'helvetica';
	
}

.header {
	width: 5em;
	height: 3em;
	background-color: springgreen;
	display: inline-block;
	margin-right: 0.01em;
	border-radius: 0.2em;
}

.tailer {
	width: 5em;
	height: 3em;
	background-color: springgreen;
	display: inline-block;
	margin-left: 0.01em;
	border-radius: 0.2em;
}

.domino.double {
  -ms-transform: rotate(90deg); /* IE 9 */
  -webkit-transform: rotate(90deg); /* Chrome, Safari, Opera */
  transform: rotate(90deg);
	margin-left: -0.45em;
	margin-right:-0.45em;
}

#content {
	height: 100%;
	width: 100%;
	overflow: auto;
	position: relative;
}

footer {
	text-align: center;
	width: 100%;
	position: absolute;
}

